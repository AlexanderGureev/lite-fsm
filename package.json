{
  "name": "lite-fsm",
  "version": "1.1.0-beta.2",
  "type": "module",
  "description": "lightweight finite state machine library",
  "author": "Alexander Gureev <g.alex00@bk.ru> (https://github.com/AlexanderGureev)",
  "license": "MIT",
  "main": "./dist/core.cjs",
  "module": "./dist/core.js",
  "types": "./dist/core.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "import": "./dist/middleware.js",
      "require": "./dist/middleware.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/core.d.ts"
      ],
      "react": [
        "dist/react.d.ts"
      ],
      "middleware": [
        "dist/middleware.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "redux",
    "fsm",
    "finite-state machine"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlexanderGureev/lite-fsm"
  },
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "docs:dev": "cd docs && next dev",
    "docs:build": "cd docs && next build",
    "docs:start": "cd docs && next start",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "clean-package": {
    "indent": 2,
    "remove": [
      "devDependencies"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.3.1",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/use-sync-external-store": "^0.0.4",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^3.1.2",
    "clean-package": "^2.2.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "immer": ">=9.x",
    "next": "^15.3.1",
    "prettier": "^2.8.8",
    "react": "^16.8.0 || ^17.0.2 || ^18.2.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.2 || ^18.2.0 || ^19.0.0",
    "rollup-plugin-typescript-paths": "^1.4.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.3",
    "typescript": "^5.1.6",
    "use-sync-external-store": "^1.5.0",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "immer": ">=9.x",
    "react": "^16.8.0 || ^17.0.2 || ^18.2.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.2 || ^18.2.0 || ^19.0.0",
    "use-sync-external-store": ">=1.2.0"
  },
  "peerDependenciesMeta": {
    "immer": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "use-sync-external-store": {
      "optional": true
    }
  }
}
